# Environment
ENVIRONMENT=production
DEBUG=false

# Database - Will be set by Render
DATABASE_URL=

# JWT - Render will generate SECRET_KEY
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS - Will be updated with your frontend URL
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# Application
APP_NAME=NIRD Platform
APP_VERSION=1.0.0

# Uploads
UPLOAD_DIR=/tmp/uploads
MAX_UPLOAD_SIZE=10485760

# Logging
LOG_LEVEL=INFO
LOG_FILE=/tmp/logs/nird.log

# Features
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
